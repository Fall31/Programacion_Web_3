@page
@model RazorPages.Pages.IndexModel
@{
    ViewData["Title"] = "Tareas Asignadas";
}

<div class="d-flex">
    <div class="bg-info text-white p-3" style="width: 250px; height: 100vh; position: fixed;">
        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-page="/Index">Inicio</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-page="/TareasFinalizadas">Tareas Finalizadas</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-page="/TareasCanceladas">Tareas Canceladas</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-page="/Privacy">Privacidad</a>
            </li>
        </ul>
    </div>

    <div class="flex-grow-1 p-4" style="margin-left: 250px;">
        <h1>@ViewData["Title"]</h1>
        
        <a class="btn btn-primary mb-3" asp-page="/Crear">
            <i class="fas fa-plus"></i>Crear Tarea</a>
        <form method="get" class="m-3">
            <label class="form-label">Filtrar por Estados : </label>
            <select name="FiltroEstado" class="form-select w-auto d-inline-block me-2">
               <option value="Todos" selected="@(Model.FiltroEstado == "Todos" ? "selected" : null)">Todos</option>
               <option value="Pendiente" selected="@(Model.FiltroEstado == "Pendiente" ? "selected" : null)">Pendiente</option>
               <option value="En curso" selected="@(Model.FiltroEstado == "En_curso" ? "selected" : null)">En curso</option>
            </select>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Nombre Tarea</th>
                    <th>Fecha Vencimiento</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarea in Model.Tareas)
                {
                    <tr>
                        <td>@tarea.Nombre</td>
                        <td>@tarea.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                        <td>@tarea.Estado</td>
                        <td>
                            <a class="btn btn-sm btn-primary">Editar</a>
                            <a class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i" asp-route-FiltroEstado="@Model.FiltroEstado">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
